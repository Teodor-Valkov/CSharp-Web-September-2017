@model SearchViewModel

@{
    ViewData["Title"] = $"Search Results";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Users.Any())
{
    <h3>Found Users:</h3>
    <ul>
        @foreach (var user in Model.Users)
        {
            <li><a asp-controller="Users" asp-action="Profile" asp-route-username="@user.Username">@user.Username</a> &ndash; @user.Name &ndash; @user.Birthdate.ToShortDateString() &ndash; @user.Courses Courses</li>
        }
    </ul>
}
else if (Model.SearchInUsers)
{
    <h3>No Users Found.</h3>
}

<br />

@if (Model.Courses.Any())
{
    <h3>Found Courses:</h3>
    <ul>
        @foreach (var course in Model.Courses)
        {
            <li><a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" asp-route-name="@course.Name">@course.Name</a> &ndash; @course.StartDate.ToShortDateString() &ndash; @course.EndDate.ToShortDateString() &ndash; @course.Students Students</li>
        }
    </ul>

}
else if (Model.SearchInCourses)
{
    <h3>No Courses Found.</h3>
}

<br />

@if (Model.Articles.Any())
{
    <h3>Found Articles:</h3>
    <ul>
        @foreach (var article in Model.Articles)
        {
            <li><a asp-area="Blog" asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id" asp-route-title="@article.Title">@article.Title</a> &ndash; @article.PublishDate.ToShortDateString() &ndash; @article.Author</li>
        }
    </ul>
}
else if (Model.SearchInArticles)
{
    <h3>No Articles Found.</h3>
}