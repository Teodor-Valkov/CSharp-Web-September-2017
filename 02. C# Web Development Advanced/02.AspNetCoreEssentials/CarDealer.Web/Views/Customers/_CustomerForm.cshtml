@model CustomerFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" type="text" />
        <span class="form-text text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Birth Date</label>
        <input class="form-control" asp-for="BirthDate" type="date" />
        <span class="form-text text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsYoungDriver" />
        <label asp-for="IsYoungDriver"></label>
        <span class="form-text text-danger" asp-validation-for="IsYoungDriver"></span>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Save Customer" />
    </div>
</form>