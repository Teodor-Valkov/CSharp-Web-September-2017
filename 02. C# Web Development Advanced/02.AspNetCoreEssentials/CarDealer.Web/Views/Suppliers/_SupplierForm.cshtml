@model SupplierFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" type="text" />
        <span class="form-text text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsImporter" />
        <label asp-for="IsImporter">Is Importer</label>
        <span class="form-text text-danger" asp-validation-for="IsImporter"></span>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Save Supplier" />
    </div>
</form>