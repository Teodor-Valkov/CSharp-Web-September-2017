@model CarFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Make">Make</label>
        <input class="form-control" asp-for="Make" type="text" />
        <span class="form-text text-danger" asp-validation-for="Make"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input class="form-control" asp-for="Model" type="text" />
        <span class="form-text text-danger" asp-validation-for="Model"></span>
    </div>
    <div class="form-group">
        <label asp-for="TravelledDistance"></label>
        <input class="form-control" asp-for="TravelledDistance" />
        <span class="form-text text-danger" asp-validation-for="TravelledDistance"></span>
    </div>
    <div class="form-group">
        <label asp-for="PartsIds"></label>
        <select class="form-control" asp-for="PartsIds" asp-items="Model.AllParts" multiple></select>
        <span class="form-text text-danger" asp-validation-for="PartsIds"></span>
        <small>* Hold "Ctrl" to select multiple parts</small>
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="Save Car" />
    </div>
</form>