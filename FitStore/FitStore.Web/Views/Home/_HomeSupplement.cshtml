@model SupplementAdvancedServiceModel

<div class="card col-md-4 col-sm-6 text-center">
    @if (User.IsInRole(WebConstants.ModeratorRole))
    {
        <a asp-area="Moderator" asp-controller="Supplements" asp-action="Details" asp-route-id="@Model.Id" asp-route-name="@Model.Name" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            @if (Model.Picture == string.Empty)
            {
                <img class="card-img-top img-rounded" id="home-supplement-image" src="~/images/image-not-found.jpg" alt="supplement-picture" />
            }
            else
            {
                <img class="card-img-top img-rounded" id="home-supplement-image" src="@Model.Picture" alt="supplement-picture" />
            }
        </a>
    }
    else
    {
        <a asp-area="" asp-controller="Supplements" asp-action="Details" asp-route-id="@Model.Id" asp-route-name="@Model.Name" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            @if (Model.Picture == string.Empty)
            {
                <img class="card-img-top img-rounded" id="home-supplement-image" src="~/images/image-not-found.jpg" alt="supplement-picture" />
            }
            else
            {
                <img class="card-img-top img-rounded" id="home-supplement-image" src="@Model.Picture" alt="supplement-picture" />
            }
        </a>
    }
    <br />
    <br />
    <div class="card-block">
        <h4 class="card-title text-center">@Model.Name</h4>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Manufacturer:</strong> <a asp-area="" asp-controller="Manufacturers" asp-action="Details" asp-route-id="@Model.ManufacturerId" asp-route-name="@Model.ManufacturerName">@Model.ManufacturerName</a> </li>
        <li class="list-group-item">
            <strong>Quantity:</strong>
            @if (Model.Quantity > 0)
            {
                <span class="text-success">In stock</span>
            }
            else
            {
                <span class="text-danger">Out of Stock</span>
            }
        </li>
        <li class="list-group-item"><strong>Price:</strong> @Model.Price &euro;</li>
        <li class="list-group-item">
            @if (User.IsInRole(WebConstants.ModeratorRole))
            {
                <a class="btn btn-primary btn-sm" asp-area="Moderator" asp-controller="Supplements" asp-action="Details" asp-route-id="@Model.Id" asp-route-name="@Model.Name" asp-route-returnUrl="@ViewData["ReturnUrl"]">Details</a>
            }
            else
            {
                <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Supplements" asp-action="Details" asp-route-id="@Model.Id" asp-route-name="@Model.Name" asp-route-returnUrl="@ViewData["ReturnUrl"]">Details</a>
            }
            @if (Model.Quantity > 0)
            {
                <a class="btn btn-success btn-sm" asp-area="" asp-controller="Orders" asp-action="Add" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path">Buy</a>
            }
            @if (User.Identity.IsAuthenticated && User.IsInRole(WebConstants.ManagerRole))
            {
                <a asp-area="Manager" asp-controller="Supplements" asp-action="Edit" asp-route-id="@Model.Id" asp-route-name="@Model.Name" class="btn btn-warning btn-sm">Edit</a>
                if (Model.IsDeleted)
                {
                    <a asp-area="Manager" asp-controller="Supplements" asp-action="Delete" asp-route-id="@Model.Id" asp-route-name="@Model.Name" class="btn btn-success btn-sm">Restore</a>

                }
                else
                {
                    @Html.ActionLink("Delete", "Delete", "Supplements", new { area = "Manager", id = Model.Id, name = Model.Name },
                                                                                                                                                                     new
                                                                                                                                                                     {
                                                                                                                                                                         @class = "btn btn-danger btn-sm",
                                                                                                                                                                         onclick = $"return confirm('Are you sure you want to delete *{Model.Name}*?');"
                                                                                                                                                                     })
                }
            }
        </li>
    </ul>
</div>