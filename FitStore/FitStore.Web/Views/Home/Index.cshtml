<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <br />
            @foreach (var category in Model.Categories)
            {
                <ul class="nav nav-pills nav-stacked">
                    <li id="home-category-link"><a asp-area="" asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" asp-route-name="@category.Name">@category.Name</a></li>
                    @foreach (var subcategory in category.Subcategories)
                    {
                        <li id="home-subcategory-link"><a asp-area="" asp-controller="Subcategories" asp-action="Details" asp-route-id="@subcategory.Id" asp-route-name="@subcategory.Name" class="col-md-offset-2">@subcategory.Name</a></li>
                    }
                </ul>
            }
        </div>

        <div class="col-md-offset-1 col-md-9">
            <br />
            <br />
            @foreach (var supplement in Model.Supplements)
            {
                <div class="card col-md-4 text-center">
                    <a asp-area="" asp-controller="Supplements" asp-action="Details" asp-route-id="@supplement.Id" asp-route-name="@supplement.Name">
                        <img class="card-img-top img-rounded" id="home-supplement-image" src="@supplement.Picture" alt="supplement-picture">
                    </a>
                    <br />
                    <br />
                    <div class="card-block">
                        <h4 class="card-title text-center">@supplement.Name</h4>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Manufacturer:</strong> @supplement.ManufacturerName</li>
                        <li class="list-group-item"><strong>Quantity:</strong> @supplement.Quantity</li>
                        <li class="list-group-item"><strong>Price:</strong> @supplement.Price &euro;</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>