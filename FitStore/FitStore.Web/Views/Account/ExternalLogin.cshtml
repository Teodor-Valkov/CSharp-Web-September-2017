@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <p class="text-info">
            You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
        </p>
        <p class="text-info">
            Please enter an email address for this site below and click the Register button to finish logging in.
        </p>

        <br />

        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-default">Back To Home</a>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}