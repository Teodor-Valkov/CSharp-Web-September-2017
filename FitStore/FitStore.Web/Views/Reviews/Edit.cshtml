@model ReviewFormViewModel

@{
    ViewData["Title"] = "Edit Review";

    string area = User.IsInRole(WebConstants.ModeratorRole)
        ? "Moderator"
        : string.Empty;
}

<div class="row">
    <div class="col-md-offset-3 col-md-6">

        <div class="text-center">
            <h2>@ViewData["Title"]</h2>
            <br />
        </div>

        <form method="post">

            @await Html.PartialAsync("_ReviewForm", Model)

            <div class="text-center">
                <a asp-area="@area" asp-controller="Reviews" asp-action="Index" class="btn btn-default">Back</a>
                <input class="btn btn-success" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}