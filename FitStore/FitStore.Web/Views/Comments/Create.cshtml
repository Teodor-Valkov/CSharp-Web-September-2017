@model CommentFormViewModel

@{
    ViewData["Title"] = "Create Comment";
}

<div class="row">
    <div class="col-md-offset-3 col-md-6">

        <div class="text-center">
            <h2>@ViewData["Title"]</h2>
            <br />
        </div>

        <form method="post">
            <div class="form-text text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea class="form-control" asp-for="Content" rows="10"></textarea>
                <span class="form-text text-danger" asp-validation-for="Content"></span>
            </div>
            <div class="text-center">
                <a asp-area="" asp-controller="Supplements" asp-action="Details" asp-route-id="@Model.SupplementId" class="btn btn-default">Back</a>
                <input class="btn btn-success" type="submit" value="Comment" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}