@model SupplementCategoryServiceModel

@{
    ViewData["Title"] = "Choose Category";
}

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="text-center">
            <h2>@ViewData["Title"]</h2>
            <br />
        </div>

        <form asp-area="Manager" asp-controller="Supplements" asp-action="Create" method="post">
            <div class="form-text text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select name="CategoryId" asp-items="@Model.Categories" class="form-control"></select>
                <span class="form-text text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <br />
            <div class="text-center">
                <a asp-area="Manager" asp-controller="Supplements" asp-action="Index" class="btn btn-default">Back</a>
                <input class="btn btn-success" type="submit" value="Choose" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}